<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Storage Demo</title>
</head>
<body>
  <h1>Storage Project Demo</h1>
  
  <label>Enter Name: </label>
  <input type="text" id="nameInput">
  <button onclick="saveLocal()">Save to LocalStorage</button>
  <button onclick="saveSession()">Save to SessionStorage</button>
  <button onclick="saveCookie()">Save to Cookie</button>
  <button onclick="showAll()">Show Stored Data</button>
  
  <div id="output"></div>

  <script>
    const output = document.getElementById("output");

    // 1. Local Storage
    function saveLocal() {
      let name = document.getElementById("nameInput").value;
      localStorage.setItem("username", name);
      alert("Saved in LocalStorage!");
    }

    // 2. Session Storage
    function saveSession() {
      let name = document.getElementById("nameInput").value;
      sessionStorage.setItem("username", name);
      alert("Saved in SessionStorage!");
    }

    // 3. Cookies (with 1-day expiry)
    function saveCookie() {
      let name = document.getElementById("nameInput").value;
      let d = new Date();
      d.setTime(d.getTime() + (1*24*60*60*1000)); // 1 day expiry
      let expires = "expires=" + d.toUTCString();
      document.cookie = "username=" + name + ";" + expires + ";path=/";
      alert("Saved in Cookie!");
    }

    // Helper: Get Cookie by name
    function getCookie(cname) {
      let name = cname + "=";
      let decodedCookie = decodeURIComponent(document.cookie);
      let ca = decodedCookie.split(';');
      for(let i = 0; i < ca.length; i++) {
        let c = ca[i].trim();
        if (c.indexOf(name) === 0) {
          return c.substring(name.length, c.length);
        }
      }
      return "";
    }

    // Show all storage data
    function showAll() {
      output.innerHTML = "<h3>Stored Data:</h3>";
      output.innerHTML += "LocalStorage: " + (localStorage.getItem("username") || "Not set") + "<br>";
      output.innerHTML += "SessionStorage: " + (sessionStorage.getItem("username") || "Not set") + "<br>";
      output.innerHTML += "Cookie: " + (getCookie("username") || "Not set") + "<br>";
    }
  </script>
</body>
</html>
