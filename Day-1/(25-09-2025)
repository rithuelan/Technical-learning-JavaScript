<body>
  <h1>JavaScript Basics Playground</h1>
  <script>
    // -----------------------------
    // 1. Variables + Data Types
    // -----------------------------
    let userName = prompt("Enter your name:");
    let age = Number(prompt("Enter your age:"));
    const pi = 3.14159;
    let isStudent = true;

    console.log(`Hello ${userName}, you are ${age} years old. Student: ${isStudent}`);

    // -----------------------------
    // 2. String operations
    // -----------------------------
    console.log("Length:", userName.length);
    console.log("Uppercase:", userName.toUpperCase());
    console.log("First 2 letters:", userName.slice(0,2));
    console.log("Replace:", userName.replace(userName[0], "#"));

    // -----------------------------
    // 3. Operators
    // -----------------------------
    let a = 12, b = 5;
    console.log("a + b =", a + b);
    console.log("a - b =", a - b);
    console.log("a * b =", a * b);
    console.log("a / b =", a / b);
    console.log("a % b =", a % b);
    console.log("a > b ?", (a > b) ? "Yes" : "No");

    // -----------------------------
    // 4. Numbers + Math
    // -----------------------------
    console.log("Random (1-10):", Math.floor(Math.random() * 10) + 1);
    console.log("Sqrt of 25:", Math.sqrt(25));
    console.log("Pi:", pi.toFixed(2));

    // -----------------------------
    // 5. Calculator
    // -----------------------------
    let n1 = Number(prompt("Enter first number:"));
    let n2 = Number(prompt("Enter second number:"));
    console.log("Addition:", n1 + n2);
    console.log("Subtraction:", n1 - n2);
    console.log("Multiplication:", n1 * n2);
    console.log("Division:", n1 / n2);

    // -----------------------------
    // 6. Number Guessing Game
    // -----------------------------
    let secret = Math.floor(Math.random() * 5) + 1;
    let guess = Number(prompt("Guess a number (1-5):"));
    if (guess === secret) {
      console.log("üéâ Correct! You guessed it.");
    } else {
      console.log(`‚ùå Wrong! The number was ${secret}`);
    }

    console.log("Thanks for playing, " + userName + " ‚úÖ");
  </script>
</body>
</html>
