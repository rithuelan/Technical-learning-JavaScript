<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JS Basics Project</title>
</head>
<body>
  <h1>JavaScript Basics Project</h1>
  <script>
    // ---------------------------
    // 1. VARIABLES + DATA TYPES
    // ---------------------------
    var oldWay = "I am var (not recommended)";
    let userName = prompt("Enter your name:"); // String
    const pi = 3.14; // Constant Number
    let age = 20;    // Number
    let isStudent = true; // Boolean
    let unknown; // Undefined
    let emptyValue = null; // Null

    console.log("Name:", userName);
    console.log("Age:", age);
    console.log("Is Student:", isStudent);
    console.log("Unknown:", unknown);
    console.log("Empty:", emptyValue);

    // ---------------------------
    // 2. STRING METHODS
    // ---------------------------
    console.log("Name Length:", userName.length);
    console.log("Uppercase:", userName.toUpperCase());
    console.log("First 3 letters:", userName.slice(0,3));
    console.log("Replace example:", userName.replace(userName[0], "@"));

    // ---------------------------
    // 3. OPERATORS
    // ---------------------------
    let num1 = 10;
    let num2 = 5;

    console.log("Addition:", num1 + num2);     // Arithmetic
    console.log("Comparison (==):", num1 == "10"); // true
    console.log("Strict Comparison (===):", num1 === "10"); // false
    console.log("Logical AND:", (num1 > 0 && num2 > 0)); // true

    // Ternary operator
    let checkAge = (age >= 18) ? "Adult" : "Minor";
    console.log("You are:", checkAge);

    // ---------------------------
    // 4. NUMBERS + MATH
    // ---------------------------
    console.log("Random number:", Math.random());
    console.log("Random integer (1–10):", Math.floor(Math.random() * 10) + 1);
    console.log("Pi value:", pi);

    // ---------------------------
    // 5. SMALL CALCULATOR
    // ---------------------------
    let a = Number(prompt("Enter first number:"));
    let b = Number(prompt("Enter second number:"));
    console.log("Sum =", a + b);
    console.log("Difference =", a - b);
    console.log("Product =", a * b);
    console.log("Quotient =", a / b);

    // ---------------------------
    // END
    // ---------------------------
    console.log("Hello, " + userName + "! Your profile and calculations are ready ✅");
  </script>
</body>
</html>
