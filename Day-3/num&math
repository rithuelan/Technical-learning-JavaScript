<body>
  <h1>ðŸ’° Tip Calculator</h1>
  
  <label>Bill Amount ($):</label><br>
  <input type="text" id="billAmount" placeholder="Enter bill amount"><br>

  <label>Tip Percentage (%):</label><br>
  <input type="text" id="tipPercent" placeholder="Enter tip %"><br>

  <button onclick="calculateTip()">Calculate Tip</button>
  <button onclick="resetFields()">Reset</button>

  <div id="output">Tip result will appear here...</div>

  <script>
    function calculateTip() {
      let bill = parseFloat(document.getElementById("billAmount").value);
      let tipPercent = parseFloat(document.getElementById("tipPercent").value);

      // Validate input
      if (isNaN(bill) || isNaN(tipPercent)) {
        document.getElementById("output").innerHTML = "Please enter valid numbers!";
        return;
      }

      // Calculate tip
      let tip = bill * (tipPercent / 100);
      let total = bill + tip;

      // Round tip and total to 2 decimals
      tip = tip.toFixed(2);
      total = total.toFixed(2);

      document.getElementById("output").innerHTML = `
        Bill Amount: $${bill} <br>
        Tip (${tipPercent}%): $${tip} <br>
        <b>Total: $${total}</b>
      `;
    }

    function resetFields() {
      document.getElementById("billAmount").value = "";
      document.getElementById("tipPercent").value = "";
      document.getElementById("output").innerHTML = "Tip result will appear here...";
    }
  </script>
</body>
